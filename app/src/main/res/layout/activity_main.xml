<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonUniversMaison"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:paddingVertical="20dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#EA5A0B"
        android:paddingHorizontal="10dp"
        android:paddingTop="0dp"
        android:text="VIVONS MAISON"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/buttonUniversSport"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:paddingVertical="20dp"
        android:text="100% sport"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/buttonUniversMaison"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/buttonUniversFetes"
        android:layout_width="80dp"
        android:paddingVertical="20dp"
        android:layout_height="75dp"
        android:text="Les FÃªtes"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/buttonUniversSport"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/buttonUniversAuto"
        android:layout_width="80dp"
        android:paddingVertical="20dp"
        android:text="Vivons Auto"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/buttonUniversFetes"
        tools:ignore="MissingConstraints"
        android:layout_height="75dp" />
    <Button
        android:id="@+id/buttonUniversEvasion"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:paddingVertical="20dp"
        android:text="VivonsEvasion"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@id/buttonUniversAuto"
        />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/guideline8"
        app:layout_constraintEnd_toEndOf="@id/guideline5"
        app:layout_constraintBottom_toBottomOf="@+id/guideline9"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonConnexion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#7D3C98"
        android:text="Connexion"
        android:textSize="13sp"
        app:layout_constraintDimensionRatio="25:10"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/guideline2" />

    <Button
        android:id="@+id/buttonInscription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#7D3C98"
        android:text="Inscription"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintDimensionRatio="25:10"
        app:layout_constraintEnd_toEndOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintTop_toTopOf="@id/guideline2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />


</androidx.constraintlayout.widget.ConstraintLayout>

