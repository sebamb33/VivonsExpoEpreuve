<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisiteurActivity">
    <TextView
        android:id="@+id/texteUnivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ListView
        android:id="@+id/listView_listeExposant"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_lettreAlphabet"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Spinner
        android:id="@+id/spinner_lettreAlphabet"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:background="@drawable/rounded_corners"
        android:drawSelectorOnTop="true"
        app:layout_constraintTop_toBottomOf="@id/texteUnivers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

